pipeline
{
    agent any
    
    tools{
    maven 'maven'
    }
    
   stages{
    stage('Build')
        {
            steps{
              sh 'mvn clean install'
                 }
         }
         stage('SonarQube analysis'){ 
         environment{
               scannerHome = tool 'sonar'
                   }
       steps{
        withSonarQubeEnv('SonarQube') {
            sh "${scannerHome}/bin/sonar-scanner"
           }
       }
   }
}
}
